{
  "manifest_version": 2,
  "name": "Searching now",
  "version": "1.0",
  "description": "Tweet your searching keywords",
  "background": {
    "scripts": ["sha1.js", "oauth.js", "jquery.min.js", "twitter.js", "background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "https://api.twitter.com/"
  ],
  "browser_action": {
    "default_popup": "popitem.html",
    "default_icon": "tsunamayo128.jpeg"
  },
  "icons" : {
    "128": "tsunamayo128.jpeg"
  },
  "author": "SAKATA Sinji",
  "homepage_url": "https://github.com/NKMR6194/searching-now"
}
